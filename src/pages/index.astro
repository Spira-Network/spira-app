---
import Base from "../layouts/Base.astro";
import { Globe2, Menu } from "lucide-react";
---

<Base>
  <nav
    class="fixed p-5 flex justify-end items-center pr-20 font-robotoslab w-full z-10"
  >
    <ul class="flex gap-12 items-center text-white">
      <li><a href="#">Home</a></li>
      <li><a href="#">Iniciar sesión</a></li>
      <li><a href="#">Unirse</a></li>
    </ul>

    <button class="ml-16 text-white"> <Globe2 /></button>
    <button class="ml-16 text-white">
      <Menu color="white" />
    </button>
  </nav>

  <div class="min-h-screen">
    <video
      id="backgroundVideo"
      aria-hidden="true"
      muted
      autoplay
      playsinline
      class="relative h-full w-full object-cover transition-opacity duration-300 pointer visible opacity-100 -scale-x-100"
    >
      <source src="spira-intro.mp4" type="video/mp4" /> Your browser does not
      support the video tag.
    </video>
    <ul
      class="absolute top-1/2 left-1/4 transform -translate-x-1/2 -translate-y-1/2 gap-y-32 flex flex-col pl-40 font-montserrat uppercase font-bold max-h-screen"
    >
      <li class="flex items-center gap-6">
        <!-- <img src="path/to/image1" alt="Icono 1" class="w-10 h-10 mr-10" /> -->
        <Globe2 />
        <a href="#">Sincronizador de recursos</a>
      </li>
      <li class="flex items-center gap-6">
        <!-- <img src="path/to/image2" alt="Icono 2" class="w-10 h-10 mr-10" /> -->
        <Globe2 />
        <a href="#">Mapa interactivo</a>
      </li>
      <li class="flex items-center gap-6">
        <!-- <img src="path/to/image3" alt="Icono 3" class="w-10 h-10 mr-10" /> -->
        <Globe2 />
        <a href="#">Red sináptica</a>
      </li>
      <li class="flex items-center gap-6">
        <!-- <img src="path/to/image4" alt="Icono 4" class="w-10 h-10 mr-10" /> -->
        <Globe2 />
        <a href="#">Foro de co-creación</a>
      </li>
    </ul>
  </div>
  <div class="min-h-screen bg-amber-500 grid place-items-center">Spira</div>
</Base>

