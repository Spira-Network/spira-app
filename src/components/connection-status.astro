<script>
    import { authState } from '@/stores/auth'

    const statusTexts = {
        idle: 'üî¥ Desconectado',
        connecting: 'üü° Conectando...',
        authenticated: 'üíö Conectado',
        error: '‚ùå Error',
    }

    const updateConnectionStatus = () => {
        const statusDiv = document.getElementById('connectionStatus')
        if (!statusDiv) return

        // Limpiar el contenido actual
        statusDiv.textContent = ''

        const state = authState.get()
        const status = statusTexts[state.status]
        const principal = state.principal || ''

        // Crear y a√±adir el p√°rrafo del estado de conexi√≥n
        const statusParagraph = document.createElement('p')
        statusParagraph.textContent = `Estado de conexi√≥n: ${status}`
        statusDiv.appendChild(statusParagraph)

        // A√±adir el p√°rrafo del ID principal si el usuario est√° conectado
        if (state.status === 'authenticated' && principal) {
            const principalParagraph = document.createElement('p')
            principalParagraph.textContent = `ID Principal: ${principal}`
            statusDiv.appendChild(principalParagraph)
        }
    }

    if (typeof window !== 'undefined') {
        window.addEventListener('DOMContentLoaded', () => {
            authState.subscribe(updateConnectionStatus)
            updateConnectionStatus() // Actualizar inmediatamente
        })
    }
</script>

<div id='connectionStatus'>Cargando estado de conexi√≥n...</div>
