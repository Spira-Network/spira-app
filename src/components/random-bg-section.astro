<random-bg-section class="h-screen snap-start block">
  <slot />
</random-bg-section>

<script>
  class RandomBgSection extends HTMLElement {
    constructor() {
      super();
    }

    connectedCallback() {
      this.style.backgroundColor = this.getRandomHexColor();
    }

    getRandomHexColor() {
      return `#${Array.from({ length: 6 })
        .map(() => ((Math.random() * 16) | 0).toString(16))
        .join("")}`;
    }
  }
  customElements.define("random-bg-section", RandomBgSection);
</script>
