---
interface Props {
  title: string;
  subtitle: string;
  content: string;
  image: string;
}

const { title, subtitle, content, image } = Astro.props;
---

<section
  class="bg-white rounded-lg shadow-sm flex flex-col items-center font-montserrat"
>
  <img
    src={`/apps/${image}.png`}
    alt={`${title} - ${subtitle}`}
    class="w-full object-contain h-64"
  />
  <h2 class="text-2xl font-black mb-2 text-center text-stone-800">
    {title}
  </h2>
  <p class="text-black text-center mb-4 text-sm font-bold uppercase">
    {subtitle}
  </p>
  <p class="text-sm font-robotoslab w-full text-stone-500 text-center">
    {content}
  </p>
</section>
