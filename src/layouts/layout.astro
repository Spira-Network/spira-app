---
import '@/globals.css'

import { ViewTransitions } from 'astro:transitions'

import { Navbar } from '@/components/navbar.tsx'

interface Props {
    title?: string
}

const { title } = Astro.props
const pageTitle = [title, 'Spira'].filter(Boolean).join(' - ')
const pathname = new URL(Astro.request.url).pathname
console.log('pathname', pathname)
---

<script is:inline>
    const getThemePreference = () => {
        if (typeof localStorage !== 'undefined' && localStorage.getItem('theme')) {
            return localStorage.getItem('theme')
        }
        return window.matchMedia('(prefers-color-scheme: dark)').matches ? 'dark' : 'light'
    }
    const isDark = getThemePreference() === 'dark'
    document.documentElement.classList[isDark ? 'add' : 'remove']('dark')

    if (typeof localStorage !== 'undefined') {
        const observer = new MutationObserver(() => {
            const isDark = document.documentElement.classList.contains('dark')
            localStorage.setItem('theme', isDark ? 'dark' : 'light')
        })
        observer.observe(document.documentElement, { attributes: true, attributeFilter: ['class'] })
    }
</script>

<html lang='en'>
    <head>
        <meta charset='utf-8' />
        <link rel='icon' type='image/svg+xml' href='/favicon.svg' />
        <meta name='viewport' content='width=device-width' />
        <meta
            name='description'
            content='Spira es una herramienta enlazadora que se desarrolla a travÃ©s de un mapa interactivo global'
        />
        <ViewTransitions />
        <title>{pageTitle}</title>
    </head>
    <body>
        <div class='flex min-h-screen flex-col pb-14 md:pb-0'>
            <Navbar client:load {pathname} />
            <slot />
        </div>
    </body>
</html>
