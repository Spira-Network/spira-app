---
import '@fontsource-variable/roboto-slab'
import '@fontsource-variable/montserrat'
import '@/globals.css'
import Nav from '../components/navbar.astro'
import { ViewTransitions } from 'astro:transitions'

interface Props {
    title?: string
    whiteNav?: boolean
}

const { title, whiteNav } = Astro.props

const pageTitle = [title, 'Spira'].filter(Boolean).join(' - ')
---

<html lang='en'>
    <head>
        <meta charset='utf-8' />
        <link rel='icon' type='image/svg+xml' href='favicon.svg' />
        <meta name='viewport' content='width=device-width' />
        <meta
            name='description'
            content='Spira es una herramienta enlazadora que se desarrolla a travÃ©s de un mapa interactivo global'
        />
        <ViewTransitions />
        <title>{pageTitle}</title>
    </head>
    <body>
        <Nav {whiteNav} />
        <main class='scroll-smooth overflow-x-hidden'>
            <slot />
        </main>
        <script>
            import '../lib/dev-utils.ts'
        </script>
    </body>
</html>
